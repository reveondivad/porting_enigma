notch:  [3]s32  = .[16, 4, 21]

Enigma :: struct {
    r: [3]s32
    o: [3]s32
    n1: s32
    n2: s32
}

mod26 :: fn(n: s32) s32 {
    m := n % 26
    return if m < 0 { m + 26 } else { m }
}

get_fwd :: fn(r: s32, i: s32) s32 {
    return if r == 0 { fwd_i[i] } else if r == 1 { fwd_ii[i] } else { fwd_iii[i] }
}

get_bwd :: fn(r: s32, i: s32) s32 {
    return if r == 0 { bwd_i[i] } else if r == 1 { bwd_ii[i] } else { bwd_iii[i] }
}

pass_fwd :: fn(rotor: s32, offset: s32, ch: s32) s32 {
    inp := mod26(ch + offset)
    out := get_fwd(rotor, inp)
    return mod26(out - offset)
}

pass_bwd :: fn(rotor: s32, offset: s32, ch: s32) s32 {
    inp := mod26(ch + offset)
    out := get_bwd(rotor, inp)
    return mod26(out - offset)
}

step :: fn(e: *Enigma) {
    if e.o[1] == e.n1 {
        e.o[1] = mod26(e.o[1] + 1)
        e.o[0] = mod26(e.o[0] + 1)
    } else if e.o[2] == e.n2 {
        e.o[1] = mod26(e.o[1] + 1)
    }
    e.o[2] = mod26(e.o[2] + 1)
}

press_key :: fn(e: *Enigma, ch: s32) s32 {
    step(e)
    c := ch
    c = pass_fwd(e.r[2],e.o[2],c); c = pass_fwd(e.r[1],e.o[1],c); c = pass_fwd(e.r[0],e.o[0],c)
    c = ref_b[c]
    c = pass_bwd(e.r[0],e.o[0],c); c = pass_bwd(e.r[1],e.o[1],c); c = pass_bwd(e.r[2],e.o[2],c)
    return c
}

