var[3]  int notches = [16, 4, 21]

code/call Mod26 (var int n) -> int do
    var int m = n % 26
    if m < 0 then m = m + 26 end
    escape m
end

data Enigma with
    var[3] int r
    var[3] int o
    var int n1
    var int n2
end

code/call InitEnigma (var int r0, var int r1, var int r2,
                      var int k0, var int k1, var int k2) -> Enigma do
    var Enigma e
    e.r = [r0, r1, r2]
    e.o = [k0, k1, k2]
    e.n1 = notches[r1]
    e.n2 = notches[r2]
    escape e
end

code/call Step (var& Enigma e) -> void do
    if e.o[1] == e.n1 then
        e.o[1] = call Mod26(e.o[1]+1)
        e.o[0] = call Mod26(e.o[0]+1)
    else/if e.o[2] == e.n2 then
        e.o[1] = call Mod26(e.o[1]+1)
    end
    e.o[2] = call Mod26(e.o[2]+1)
end

