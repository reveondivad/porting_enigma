Property Notches As %List [ InitialExpression = {$LB(16,4,21)} ];

Property Rotors As %List;
Property Offsets As %List;
Property N1 As %Integer;
Property N2 As %Integer;

Method Init(r0, r1, r2, k0, k1, k2) {
    Set ..Rotors = $LB(r0, r1, r2)
    Set ..Offsets = $LB(k0, k1, k2)
    Set ..N1 = $LG(..Notches, r1+1)
    Set ..N2 = $LG(..Notches, r2+1)
}

ClassMethod Mod26(n As %Integer) As %Integer {
    Set m = n # 26
    If m < 0 Set m = m + 26
    Return m
}

