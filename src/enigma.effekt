def mod26(n: Int): Int = {
  val m = n.mod(26)
  if (m < 0) m + 26 else m
}

def getFwd(r: Int, i: Int): Int = r match {
  case 0 => fwdI.unsafeGet(i)
  case 1 => fwdII.unsafeGet(i)
  case _ => fwdIII.unsafeGet(i)
}

def getBwd(r: Int, i: Int): Int = r match {
  case 0 => bwdI.unsafeGet(i)
  case 1 => bwdII.unsafeGet(i)
  case _ => bwdIII.unsafeGet(i)
}

def passFwd(rotor: Int, offset: Int, ch: Int): Int = {
  val inp = mod26(ch + offset)
  val out = getFwd(rotor, inp)
  mod26(out - offset)
}

def passBwd(rotor: Int, offset: Int, ch: Int): Int = {
  val inp = mod26(ch + offset)
  val out = getBwd(rotor, inp)
  mod26(out - offset)
}

// Using mutable state effect
effect EnigmaState {
  def getO(i: Int): Int
  def setO(i: Int, v: Int): Unit
}

def step() = {
  val o0 = do getO(0); val o1 = do getO(1); val o2 = do getO(2)
  // double-stepping
  if (o1 == notches.unsafeGet(1)) {
    do setO(1, mod26(o1 + 1))
    do setO(0, mod26(o0 + 1))
  } else if (o2 == notches.unsafeGet(2)) {
    do setO(1, mod26(o1 + 1))
  }
  do setO(2, mod26(do getO(2) + 1))
}

