    Mod26(n : int) : int {
        def m = n % 26;
        if (m < 0) m + 26 else m
    }

    GetFwd(r : int, i : int) : int {
        match (r) { | 0 => fwdI[i] | 1 => fwdII[i] | _ => fwdIII[i] }
    }
    GetBwd(r : int, i : int) : int {
        match (r) { | 0 => bwdI[i] | 1 => bwdII[i] | _ => bwdIII[i] }
    }

    PassFwd(rotor : int, offset : int, ch : int) : int {
        Mod26(GetFwd(rotor, Mod26(ch + offset)) - offset)
    }
    PassBwd(rotor : int, offset : int, ch : int) : int {
        Mod26(GetBwd(rotor, Mod26(ch + offset)) - offset)
    }

