fun mod26(n :: Number) -> Number:
  m = num-modulo(n, 26)
  if m < 0: m + 26
  else: m
  end
end

fun get-fwd(r :: Number, i :: Number) -> Number:
  wiring = ask:
    | r == 0 then: fwd-I
    | r == 1 then: fwd-II
    | otherwise: fwd-III
  end
  wiring.get(i)
end

fun get-bwd(r :: Number, i :: Number) -> Number:
  wiring = ask:
    | r == 0 then: bwd-I
    | r == 1 then: bwd-II
    | otherwise: bwd-III
  end
  wiring.get(i)
end

fun pass-fwd(rotor :: Number, offset :: Number, ch :: Number) -> Number:
  inp = mod26(ch + offset)
  out = get-fwd(rotor, inp)
  mod26(out - offset)
end

fun pass-bwd(rotor :: Number, offset :: Number, ch :: Number) -> Number:
  inp = mod26(ch + offset)
  out = get-bwd(rotor, inp)
  mod26(out - offset)
end

data State:
  | enigma-state(r0, r1, r2, o0, o1, o2, n1, n2)
end

fun step(s :: State) -> State:
  mid = s.o1 == s.n1
  atn = s.o2 == s.n2
  new-o2 = mod26(s.o2 + 1)
  new-o1 = if mid or atn: mod26(s.o1 + 1) else: s.o1 end
  new-o0 = if mid: mod26(s.o0 + 1) else: s.o0 end
  enigma-state(s.r0, s.r1, s.r2, new-o0, new-o1, new-o2, s.n1, s.n2)
end

fun encrypt-char(s :: State, ch :: Number) -> {Number; State}:
  ns = step(s)
  c = ch
  c2 = pass-fwd(ns.r2, ns.o2, c)
  c3 = pass-fwd(ns.r1, ns.o1, c2)
  c4 = pass-fwd(ns.r0, ns.o0, c3)
  c5 = ref-B.get(c4)
  c6 = pass-bwd(ns.r0, ns.o0, c5)
  c7 = pass-bwd(ns.r1, ns.o1, c6)
  c8 = pass-bwd(ns.r2, ns.o2, c7)
  {c8; ns}
end

