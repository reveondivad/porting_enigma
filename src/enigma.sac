int mod26(int n) {
    m = n % 26;
    return (m < 0) ? m + 26 : m;
}

int getFwd(int r, int i) {
    return (r == 0) ? fwdI()[i] : (r == 1) ? fwdII()[i] : fwdIII()[i];
}

int getBwd(int r, int i) {
    return (r == 0) ? bwdI()[i] : (r == 1) ? bwdII()[i] : bwdIII()[i];
}

int passFwd(int rotor, int offset, int ch) {
    inp = mod26(ch + offset);
    out = getFwd(rotor, inp);
    return mod26(out - offset);
}

int passBwd(int rotor, int offset, int ch) {
    inp = mod26(ch + offset);
    out = getBwd(rotor, inp);
    return mod26(out - offset);
}

