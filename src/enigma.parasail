class Enigma is
  exports
    func Mod26(N : Univ_Integer) -> Result : Univ_Integer is
        const M := N mod 26;
        Result := (if M < 0 then M + 26 else M);
    end func Mod26;

    func GetFwd(R : Univ_Integer; I : Univ_Integer) -> Univ_Integer is
        case R of
            [0] => return FwdI[I + 1];
            [1] => return FwdII[I + 1];
            [..] => return FwdIII[I + 1];
        end case;
    end func GetFwd;

    func GetBwd(R : Univ_Integer; I : Univ_Integer) -> Univ_Integer is
        case R of
            [0] => return BwdI[I + 1];
            [1] => return BwdII[I + 1];
            [..] => return BwdIII[I + 1];
        end case;
    end func GetBwd;

    func PassFwd(Rotor, Offset, Ch : Univ_Integer) -> Univ_Integer is
        const Inp := Mod26(Ch + Offset);
        return Mod26(GetFwd(Rotor, Inp) - Offset);
    end func PassFwd;

    func PassBwd(Rotor, Offset, Ch : Univ_Integer) -> Univ_Integer is
        const Inp := Mod26(Ch + Offset);
        return Mod26(GetBwd(Rotor, Inp) - Offset);
    end func PassBwd;

